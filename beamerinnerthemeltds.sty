\ProvidesPackage{beamerinnerthemeltds}
\mode<presentation>

% ------------------ %
% Block environments %
% ------------------ %
\newcommand{\ltds@block@begin}[2]{%
	\par\vskip\medskipamount%
	\ifx\insertblocktitle\@empty\newcommand{\yskiplength}{1.5ex}
	\else\newcommand{\yskiplength}{2ex}
	\fi
	\usebeamercolor{#1}
	\begin{tikzpicture}
	\node [
	draw=#1.fg, 
	fill=#1.bg, 
	inner sep = 1ex,
	inner ysep = \yskiplength,
	text width=\paperwidth - 2.5cm - 5ex, 
	minimum width=\paperwidth - 2.5cm - 1ex,
	rounded corners
	] (BOXCONTENT) \bgroup%
	\begin{minipage}{\textwidth}
	\usebeamercolor{#2}
	\usebeamerfont{beamer body}%
}
\newcommand{\ltds@block@end}[1]{%
	\end{minipage}%
	\egroup;
	\usebeamercolor{#1}
	\ifx\insertblocktitle\@empty
	\else%
	{
		\node[
		fill=#1.bg,
		anchor=west,
		text=#1.fg,
		inner ysep = 1.5pt,
		rounded corners
		] at ([shift={(5pt,0)}]BOXCONTENT.north west) 
		{\insertblocktitle};
	}
	\fi
	\end{tikzpicture}
	\vskip\smallskipamount
}
\defbeamertemplate*{block begin}{ltds}
{
	\ltds@block@begin{block box}{block body}
}
\defbeamertemplate*{block end}{ltds}
{
	\ltds@block@end{block title}
}
\defbeamertemplate*{block example begin}{ltds}
{
	\ltds@block@begin{block box example}{block body example}
}
\defbeamertemplate*{block example end}{ltds}
{
	\ltds@block@end{block title example}
}
\defbeamertemplate*{block alerted begin}{ltds}
{
	\ltds@block@begin{block box alerted}{block body alerted}
}
\defbeamertemplate*{block alerted end}{ltds}
{
	\ltds@block@end{block title alerted}
}
\defbeamertemplate*{block body}{}{\justifying}

